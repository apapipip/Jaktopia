<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:layout_marginStart="100.5dp"
        android:layout_alignBottom="@+id/fragment_timeline_recycler_view"/>

    <android.support.v7.widget.RecyclerView android:id="@id/fragment_timeline_recycler_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <Button android:id="@+id/fragment_timeline_post_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ic_post_button"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"/>

</RelativeLayout>