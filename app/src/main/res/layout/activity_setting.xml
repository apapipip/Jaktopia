<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaktopia.tiramisu.jaktopia.SettingActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/setting_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_scrollFlags="scroll|enterAlways"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#f8a161">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTING"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ffffff"/>

    </android.support.v7.widget.Toolbar>

    <Button android:id="@+id/setting_profile_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/timeline_comment_card_bg"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Profile"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center_vertical"
        android:paddingStart="15dp"/>

    <Button android:id="@+id/setting_notification_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_profile_button"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/setting_profile_button"
        android:layout_alignEnd="@id/setting_profile_button"
        android:background="@drawable/timeline_comment_card_bg"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Notification"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center_vertical"
        android:paddingStart="15dp"/>

    <Button android:id="@+id/setting_timeline_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_notification_button"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@id/setting_profile_button"
        android:layout_alignEnd="@id/setting_profile_button"
        android:background="@drawable/timeline_comment_card_bg"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Timeline"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center_vertical"
        android:paddingStart="15dp" />

    <Button android:id="@+id/setting_about_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_timeline_button"
        android:layout_marginTop="70dp"
        android:layout_alignStart="@id/setting_profile_button"
        android:layout_alignEnd="@id/setting_profile_button"
        android:background="@drawable/timeline_comment_card_bg"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="About this Application"
        android:textSize="14sp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"
        android:gravity="left|center_vertical"
        android:paddingStart="15dp" />

</RelativeLayout>
