<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView android:id="@+id/comment_header_caption_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_toolbar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#00000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/timeline_comment_card_bg"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/comment_header_poster_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/profpic"
                android:layout_marginEnd="10dp"/>

            <TextView android:id="@+id/comment_header_caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/comment_header_poster_icon"
                android:text="Luthfi hati2 ada kemacetan luar biasa"
                android:textSize="15sp"
                android:layout_marginTop="7dp"/>

            <TextView android:id="@+id/comment_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/comment_header_poster_icon"
                android:layout_below="@id/comment_header_caption"
                android:text="5 minutes ago"
                android:textSize="14sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>