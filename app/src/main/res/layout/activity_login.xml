<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        tools:context="com.jaktopia.tiramisu.jaktopia.LoginActivity">

        <ImageView android:id="@+id/login_jaktopia_icon"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_jaktopia_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"/>

        <android.support.v7.widget.CardView android:id="@+id/login_username_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_jaktopia_icon"
            android:layout_marginTop="40dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#00000000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timeline_comment_card_bg">

                <EditText android:id="@+id/login_insert_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="e-mail..."
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView android:id="@+id/login_password_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_username_card"
            android:layout_marginTop="20dp"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#00000000">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/timeline_comment_card_bg">

                <EditText android:id="@+id/login_insert_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="password..."
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:inputType="textPassword"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button android:id="@+id/login_sign_in_button"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_sign_in_button"
            android:layout_below="@id/login_password_card"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <ImageView android:id="@+id/login_register_message"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:src="@drawable/message_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/login_sign_in_button"/>

        <Button android:id="@+id/login_sign_up_button"
            android:layout_width="150dp"
            android:layout_height="38dp"
            android:background="@drawable/ic_sign_up_button"
            android:layout_below="@id/login_register_message"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>
