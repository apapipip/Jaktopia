<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jaktopia.tiramisu.jaktopia.CommentActivity">

    <android.support.v7.widget.Toolbar android:id="@+id/comment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#f8a161">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMENT"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ffffff"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView android:id="@+id/comment_insert_comment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#00000000">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/timeline_comment_card_bg">

            <Button android:id="@+id/comment_post_button"
                android:layout_width="45dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="@drawable/ic_commentwithbg"/>

            <EditText android:id="@+id/comment_insert_comment_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/comment_post_button"
                android:hint="write a comment..."
                android:fontFamily="sans-serif-light"
                android:textSize="14sp"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ProgressBar android:id="@+id/comment_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"/>

    <android.support.v7.widget.RecyclerView android:id="@+id/comment_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/comment_toolbar"
        android:layout_above="@id/comment_insert_comment_card"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>
