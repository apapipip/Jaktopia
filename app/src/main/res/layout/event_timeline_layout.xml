<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/event_timeline_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"/>

    <ImageView android:id="@+id/event_timeline_category_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/event_timeline_user_icon"
        android:layout_toEndOf="@+id/event_timeline_user_icon"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="7dp"/>

    <TextView android:id="@+id/event_timeline_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demonstration"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_alignTop="@+id/event_timeline_category_icon"
        android:layout_toEndOf="@+id/event_timeline_category_icon" />

    <TextView android:id="@+id/event_timeline_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="accident at "
        android:textSize="16sp"
        android:layout_below="@id/event_timeline_category_name"
        android:layout_toEndOf="@id/event_timeline_category_icon"/>

    <TextView android:id="@+id/event_timeline_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tebet"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/event_timeline_category_name"
        android:layout_toEndOf="@id/event_timeline_description"/>

    <TextView android:id="@+id/event_timeline_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 minutes ago"
        android:textSize="16sp"
        android:layout_below="@id/event_timeline_description"
        android:layout_toEndOf="@id/event_timeline_category_icon"/>

</RelativeLayout>